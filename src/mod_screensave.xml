<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="site"
	method="upgrade">
	<name>ScreenSave</name>
	<author>Marko Zabreznik</author>
	<creationDate>December 2008</creationDate>
	<copyright>Copyright (C) 2012 Marko Zabreznik. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>marko@zabreznik.net</authorEmail>
	<authorUrl>zabreznik.net</authorUrl>
	<version>2.0.0</version>
	<description>MOD_SCREENSAVE_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_screensave">mod_screensave.php</filename>
		<folder>tmpl</folder>
		<folder>languages</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_screensave.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_random_image.ini</language>
		<language tag="en-GB">en-GB.mod_random_image.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="folder"
					type="text"
					default=""
					label="MOD_SCREENSAVE_FIELD_FOLDER_LABEL"
					description="MOD_SCREENSAVE_FIELD_FOLDER_DESC" />
				<field
					name="position"
					type="text"
					default="fill"
					label="MOD_SCREENSAVE_FIELD_POSITION_LABEL"
					description="MOD_SCREENSAVE_FIELD_POSITION_DESC" />
				<field
					name="animation"
					type="text"
					default="no"
					label="MOD_SCREENSAVE_FIELD_ANIMATION_LABEL"
					description="MOD_SCREENSAVE_FIELD_ANIMATION_DESC" />
				<field
					name="wait"
					type="text"
					default="60"
					label="MOD_SCREENSAVE_FIELD_WAIT_LABEL"
					description="MOD_SCREENSAVE_FIELD_WAIT_DESC" />
				<field
					name="delay"
					type="text"
					default="5"
					label="MOD_SCREENSAVE_FIELD_DELAY_LABEL"
					description="MOD_SCREENSAVE_FIELD_DELAY_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
